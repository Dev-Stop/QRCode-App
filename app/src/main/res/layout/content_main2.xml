<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="7dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saif.qrcodeapp.Main2Activity"
    tools:showIn="@layout/app_bar_main2"
    android:orientation="vertical">


    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/roundedrect2"
        android:paddingBottom="10dp"
        android:text="Get Help"
        android:id="@+id/HelpBtn"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/scanBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to do today?"
        android:paddingTop="45dp"
        android:textSize="15dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView

        android:layout_width="120dp"
        android:layout_height="110dp"
        android:background="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="90dp"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/txtView"
        android:layout_alignStart="@+id/txtView" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@drawable/roundedrect"
        android:text="Scan Used Materials"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/txtView"
        android:layout_alignLeft="@+id/HelpBtn"
        android:layout_alignStart="@+id/HelpBtn" />


</RelativeLayout>
